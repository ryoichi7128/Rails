<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render partial:"profile" %>

<%= render partial:"books/new" %>


<h1>Books</h1>

<table>
 <thead>
 <tr>
 	<th>Title</th>
 	<th>opinion</th>
 </tr>
 </thead>
 <tbody>
<% @users.each do |user| %>
<% @books.each do |book| %>

<tr>
<td><%= user.profile_image %></td>
<td><%= book.title %></td>
<td><%= book.body %></td>
</tr>

<% end %>
</tbody>
</table>

